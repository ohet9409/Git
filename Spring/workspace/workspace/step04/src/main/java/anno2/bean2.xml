<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean 객체 설정 3 : setter 자동 연결 -->
	<bean id="favoriteFood" class="anno2.Food" p:foodName="스파게티" p:foodPrice="7500"/>
	<bean id="unFavoriteFood" class="anno2.Food" p:foodName="보신탕" p:foodPrice="20000"/>
	<bean id="myFood" class="anno2.MyFoodMgr" autowire="byName"/>
</beans>
